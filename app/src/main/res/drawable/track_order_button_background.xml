<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <solid android:color="#8B5CF6" /> <!-- Purple color for selected state -->
            <corners android:radius="16dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#FFFFFF" /> <!-- White color for unselected state -->
            <stroke android:width="2dp" android:color="#8B5CF6" /> <!-- Purple border -->
            <corners android:radius="16dp" />
        </shape>
    </item>
</selector>
